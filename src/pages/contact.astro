---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - Whisked Away Bakery">
  <Navigation />
  
  <main class="pt-20 pb-16">
    <section class="py-20 bg-gradient-to-br from-purple-50 to-gold-50">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
          <h1 class="font-script text-5xl md:text-6xl font-bold text-purple-800 mb-6">
            Get in Touch
          </h1>
          <p class="text-xl text-gray-600">
            We'd love to hear from you! Reach out with questions, special orders, or just to say hello
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white rounded-2xl shadow-xl p-8 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-purple-100 to-transparent rounded-full transform translate-x-16 -translate-y-16"></div>
            
            <div class="relative z-10">
              <h2 class="font-script text-3xl font-bold text-purple-800 mb-6">
                Send us a Message
              </h2>
              
              <form class="space-y-6" action="#" method="POST">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Your Name
                  </label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                    placeholder="Enter your full name"
                  >
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email Address
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                    placeholder="your.email@example.com"
                  >
                </div>
                
                <div>
                  <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                    Subject
                  </label>
                  <select 
                    id="subject" 
                    name="subject" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                  >
                    <option value="">Select a subject</option>
                    <option value="general">General Inquiry</option>
                    <option value="order">Special Order Request</option>
                    <option value="catering">Catering Services</option>
                    <option value="feedback">Feedback</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                    Message
                  </label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all resize-none"
                    placeholder="Tell us how we can help you..."
                  ></textarea>
                </div>
                
                <button 
                  type="submit"
                  class="w-full bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white py-4 rounded-lg font-semibold text-lg transition-all transform hover:scale-105"
                >
                  Send Message ✨
                </button>
              </form>
            </div>
          </div>
          
          <!-- Contact Information -->
          <div class="space-y-8">
            <!-- Contact Details -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
              <h2 class="font-script text-3xl font-bold text-purple-800 mb-6">
                Visit Our Bakery
              </h2>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-4">
                  <div class="bg-purple-100 p-3 rounded-full">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-800">Address</h3>
                    <p class="text-gray-600">
                      123 Magic Lane<br>
                      Whimsical Heights, WH 12345
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="bg-gold-100 p-3 rounded-full">
                    <svg class="w-6 h-6 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-800">Phone</h3>
                    <p class="text-gray-600">(555) 123-BAKE</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="bg-purple-100 p-3 rounded-full">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-800">Email</h3>
                    <p class="text-gray-600">info@whiskedawaybakery.com</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Hours -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
              <h2 class="font-script text-3xl font-bold text-purple-800 mb-6">
                Bakery Hours
              </h2>
              
              <div class="space-y-3">
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-800">Monday - Friday</span>
                  <span class="text-gray-600">6:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-800">Saturday</span>
                  <span class="text-gray-600">7:00 AM - 7:00 PM</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-800">Sunday</span>
                  <span class="text-gray-600">8:00 AM - 4:00 PM</span>
                </div>
              </div>
              
              <div class="mt-6 p-4 bg-gold-50 rounded-lg">
                <p class="text-sm text-gold-800">
                  <strong>Special Note:</strong> Fresh pastries are available all day, 
                  but our signature items are best enjoyed in the morning when they're 
                  still warm from the oven! ✨
                </p>
              </div>
            </div>
            
            <!-- Social Media -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
              <h2 class="font-script text-3xl font-bold text-purple-800 mb-6">
                Follow Our Journey
              </h2>
              
              <div class="flex space-x-4">
                <a href="#" class="bg-gradient-to-br from-purple-500 to-purple-600 text-white p-4 rounded-full hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
