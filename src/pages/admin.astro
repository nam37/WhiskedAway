---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Admin Dashboard - Whisked Away Bakery">
  <Navigation />
  
  <main class="pt-20 pb-16 min-h-screen bg-gradient-to-br from-purple-50 to-gold-50">
    <div class="py-12">
      <div id="admin-content">
        <!-- Admin component will be mounted here -->
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<script>
  import BakeryAdmin from '../components/BakeryAdmin.tsx';
  import { supabase } from '../lib/supabase';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  // Check authentication and user role
  async function initializeAdmin() {
    try {
      const { data: { session } } = await supabase.auth.getSession();
      
      if (!session) {
        // Show login form or redirect to login
        showLoginForm();
        return;
      }

      // Get user profile to check role
      const { data: profile } = await supabase
        .from('profiles')
        .select('role')
        .eq('id', session.user.id)
        .single();

      // Mount the admin component
      const container = document.getElementById('admin-content');
      if (container) {
        const root = createRoot(container);
        root.render(React.createElement(BakeryAdmin, { 
          userRole: profile?.role 
        }));
      }
    } catch (error) {
      console.error('Error initializing admin:', error);
      showError('Failed to load admin interface');
    }
  }

  function showLoginForm() {
    const container = document.getElementById('admin-content');
    if (container) {
      container.innerHTML = `
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold text-purple-800 mb-6 text-center">Admin Login</h2>
          <form id="login-form" class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input type="email" id="email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input type="password" id="password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            </div>
            <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white py-2 rounded-md transition-colors">
              Sign In
            </button>
          </form>
          <div id="login-error" class="mt-4 text-red-600 text-sm hidden"></div>
        </div>
      `;

      const form = document.getElementById('login-form');
      form?.addEventListener('submit', handleLogin);
    }
  }

  async function handleLogin(e: Event) {
    e.preventDefault();
    
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;
    const errorDiv = document.getElementById('login-error');

    try {
      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password
      });

      if (error) {
        throw error;
      }

      // Refresh the page to initialize admin interface
      window.location.reload();
    } catch (error) {
      console.error('Login error:', error);
      if (errorDiv) {
        errorDiv.textContent = error.message || 'Login failed';
        errorDiv.classList.remove('hidden');
      }
    }
  }

  function showError(message: string) {
    const container = document.getElementById('admin-content');
    if (container) {
      container.innerHTML = `
        <div class="max-w-md mx-auto bg-red-50 border border-red-200 rounded-lg p-6 text-center">
          <h2 class="text-xl font-semibold text-red-800 mb-2">Error</h2>
          <p class="text-red-700">${message}</p>
        </div>
      `;
    }
  }

  // Initialize when page loads
  document.addEventListener('DOMContentLoaded', initializeAdmin);
</script>