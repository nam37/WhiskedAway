---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { bakeryAPI } from '../lib/supabase';

// Fetch best bakes from Supabase
const bestBakes = await bakeryAPI.getBakes();
---

<Layout title="Best Bakes - Whisked Away Bakery">
  <Navigation />
  
  <main class="pt-20 pb-16">
    <section class="py-20 bg-gradient-to-br from-purple-50 to-gold-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h1 class="font-script text-5xl md:text-6xl font-bold text-purple-800 mb-6">
            Our Best Bakes
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Discover our most beloved creationsâ€”each one crafted with love, 
            perfected through generations, and designed to create magical moments
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {bestBakes.map((bake) => (
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300 hover:shadow-xl">
              <div class="aspect-w-16 aspect-h-12 overflow-hidden">
                <img 
                  src={bake.image_url} 
                  alt={bake.title}
                  class="w-full h-64 object-cover"
                />
              </div>
              <div class="p-6">
                <h3 class="font-script text-2xl font-bold text-purple-800 mb-3">
                  {bake.title}
                </h3>
                <p class="text-gray-600 leading-relaxed">
                  {bake.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>