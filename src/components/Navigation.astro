<nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm border-b border-purple-100 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <img src="/Whisked-Away-Bakery-2.png" alt="Whisked Away Bakery" class="h-10 w-auto group-hover:animate-wiggle transition-transform">
        <span class="font-script text-2xl font-bold bg-gradient-to-r from-purple-600 to-gold-600 bg-clip-text text-transparent">
          Whisked Away
        </span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        <a href="/" class="text-gray-700 hover:text-purple-600 transition-colors font-medium">Home</a>
        <a href="/about" class="text-gray-700 hover:text-purple-600 transition-colors font-medium">About</a>
        <a href="/best-bakes" class="text-gray-700 hover:text-purple-600 transition-colors font-medium">Best Bakes</a>
        <a href="/recipes" class="text-gray-700 hover:text-purple-600 transition-colors font-medium">Recipes</a>
        <a href="/contact" class="text-gray-700 hover:text-purple-600 transition-colors font-medium">Contact</a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-purple-600 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-purple-100">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="/" class="block px-3 py-2 text-gray-700 hover:text-purple-600 transition-colors font-medium">Home</a>
      <a href="/about" class="block px-3 py-2 text-gray-700 hover:text-purple-600 transition-colors font-medium">About</a>
      <a href="/best-bakes" class="block px-3 py-2 text-gray-700 hover:text-purple-600 transition-colors font-medium">Best Bakes</a>
      <a href="/recipes" class="block px-3 py-2 text-gray-700 hover:text-purple-600 transition-colors font-medium">Recipes</a>
      <a href="/contact" class="block px-3 py-2 text-gray-700 hover:text-purple-600 transition-colors font-medium">Contact</a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>